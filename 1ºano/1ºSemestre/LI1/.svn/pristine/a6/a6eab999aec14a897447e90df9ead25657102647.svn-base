{- | Efetua uma jogada. -}
jogada :: Int -- ^ O identificador do 'Jogador' que efetua a jogada.
       -> Jogada -- ^ A 'Jogada' a efetuar.
       -> Estado -- ^ O 'Estado' anterior.
       -> Estado -- ^ O 'Estado' resultante após o jogador efetuar a jogada.
jogada x (Movimenta h) e = e{jogadoresEstado = atualizaIndiceLista x (podeMover l (mapaEstado e) h (jogadoresEstado e) (disparosEstado e)) (jogadoresEstado e)}
                          where l = encontraIndiceLista x (jogadoresEstado e)

jogada x (Dispara h) e = e{jogadoresEstado = atualizaIndiceLista x (municao l h) (jogadoresEstado e), disparosEstado = atualizaIndiceLista x (posiDisparo l n) (disparosEstado e)}
                            where l = encontraIndiceLista x (jogadoresEstado e)
                                  n = encontraJogador x (disparosEstado e)
--, disparosEstado = atualizaIndiceLista x (atualizaPDisparo n h) (disparosEstado e)


{- | Dado o valor de 'x' localiza o jogador na [jogador] na posiçao 'x' e vai buscar
a [Disparo] o disparo realizado pelo jogador que o efetuou -}

encontraJogador :: Int -> [Disparo] -> Disparo
encontraJogador x ((DisparoCanhao a b c):t) | x==a = (DisparoCanhao a b c)
                                            | otherwise = encontraJogador x t
encontraJogador x ((DisparoLaser a b c):t) | x==a = (DisparoLaser a b c)
                                           | otherwise = encontraJogador x t
encontraJogador x ((DisparoChoque a b):t) | x==a = (DisparoChoque a b)
                                          | otherwise = encontraJogador x t


{- | A funçao 'raioTank' vai buscar a [Disparo] quem é que esta a efetuar 
o disparo choque (indices) de seguida na 'qualJodador' usando os indices 
anteriormente adequiridos verifico quais os Jogadores que estao a efetuar
o choque de seguida em 'choqueTank' verificamos se o jogador que idenficamos como
x se consegue mover (se esta dentro da area afetada pelo choque) caso isto seja 
verdade o jogador nao se consegue mover com a unica exceçao do jogador que
dispara o choque esse consegue movimentar-se normalmente caso isto seja falso
e o jogador esta fora da area do choque este consegue se moviemntar normalmente
e finalmente temos a 'checaMov' que é todas as funçoes anteriormente referidas
para efetuar o resultado pretendido -}

raioTank :: [Disparo] -> [Int]
raioTank [] =  []
raioTank ((DisparoChoque f g):t) | g>0 = f: raioTank t
                                 | otherwise = raioTank t
raioTank ((DisparoCanhao a b c):t) = raioTank t
raioTank ((DisparoLaser a b c):t) = raioTank t

-- | auxiliar
qualJogador :: [Int] -> [Jogador] -> [Jogador]
qualJogador [] _ = []
qualJogador _ [] = []
qualJogador (h:t) (a:b) = encontraIndiceLista h (a:b) : qualJogador t (a:b)

-- | auxilia
choqueTank :: Jogador -> [Jogador] -> Bool
choqueTank x [] = True
choqueTank (Jogador (x,y) e r u f) ((Jogador (a,b) p o i m):t) | a-3>x || a+3<x || b-3>y || b+3<y || (x==a && y==b)  = choqueTank (Jogador (x,y) e r u f) t
                                                               | otherwise = False 

-- | junçao de axuliares
checaMov :: [Disparo] -> [Jogador] -> Jogador -> Bool
checaMov l t a = choqueTank a (qualJogador (raioTank l) t)

-- | posicao do disparo
posiDisparo :: Jogador -> Disparo -> Disparo
posiDisparo (Jogador (x,y) h _ _ _) (DisparoCanhao a _ b) = (DisparoCanhao a (somaVetores (x,y) (direcaoParaVetor h)) h)
posiDisparo (Jogador (x,y) h _ _ _) (DisparoLaser a _ b) = (DisparoLaser a (somaVetores (x,y) (direcaoParaVetor h)) h)
posiDisparo _ (DisparoChoque a b) = (DisparoChoque a b)

